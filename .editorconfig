# EditorConfig for xanadOS
# Provides consistent coding styles across different editors

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Configuration files
[*.{conf,cfg,ini}]
indent_size = 4

# Exclude archive directory from formatting
[archive/**]
ignore = true

# Exclude backup files
[*.{backup,bak,old,orig}]
ignore = true

# Exclude build artifacts
[build/{work,cache,out}/**]
ignore = true

# Exclude temporary files
[*.{tmp,temp}]
ignore = true
